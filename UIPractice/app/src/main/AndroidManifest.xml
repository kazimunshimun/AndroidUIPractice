<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.uipractice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.NavigationUIActivity"
            android:label="@string/title_activity_navigation_ui"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
        android:name=".Activity.HomeActivity"
        android:label="home"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.OfferListActivity"
            android:label="offer_list"
            android:parentActivityName=".Activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.demo.uipractice.Activity.HomeActivity" />
        </activity>
        <activity
            android:name=".Activity.OfferDetailActivity"
            android:label="offer_detail"
            android:parentActivityName=".Activity.OfferListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.demo.uipractice.Activity.OfferListActivity" />
        </activity>

    </application>

</manifest>
